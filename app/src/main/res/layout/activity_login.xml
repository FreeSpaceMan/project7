<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".LoginActivity"
    android:background="@color/pitchBlack">

    <EditText
        android:textColor="@color/lGreenMatchingMap"
        android:textColorHint="@color/lGreenMatchingMap"
        android:id="@+id/username_logPg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Username"
        android:layout_marginTop="50dp"/>

    <EditText
        android:textColor="@color/lGreenMatchingMap"
        android:textColorHint="@color/lGreenMatchingMap"
        android:id="@+id/password_logPg"
        android:inputType="textPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/username_logPg"/>

    <Button
        android:background="@color/buttonBackgGreen"
        android:textColor="@color/lGreenMatchingMap"
        android:id="@+id/button_signin_logPg"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/login"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/password_logPg"/>

</RelativeLayout>